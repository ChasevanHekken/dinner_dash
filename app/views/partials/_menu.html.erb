<div class="container menu-items-block col-md-9">
  <% @categories.each do |category| %>
    <div class="category-block row">

      <div class= "category-title">
        <h2 class="menu-category shadow"><span class="anchor" id="category-id-<%= category.id %>"></span><%= category.name %></h2>
      </div>

        <% category.items.active.each do |item| %>
          <div class="thumbnail col-sm-6 col-md-4" style="height:350px; width:250px; margin: 10px">
            <%= image_tag item.image.url(:medium) %>
            <div class="caption">
              <h3><%= item.title %></h3>
              <p><%= item.description %></p>
              <p style="position:absolute;bottom:10px;left:10px;margin:0;padding:5px 3px;"> Price:$<%= item.price %></p>
              <p><%= link_to "Add to Cart", cart_items_path(item_id: item), method: :create, class: "btn btn-default add-to-cart", role: "button" %></p>

            </div>
          </div>
        <%end%>

    </div>
  <%end%>
</div>
