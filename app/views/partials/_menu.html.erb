<div id="container">
  <% @categories.each do |category| %>
    <div class="category-block row">
      <div class= "category-title">
        <h2 class="menu-category"><span class="anchor" id="category-id-<%= category.id %>"></span><%= category.name %></h2>
      </div>
        <% category.items.each do |item| %>
          <% unless item.retired? %>
            <div class="thumbnail col-sm-6 col-md-4" style="height:350px; width:250px; margin: 10px">
              <%= image_tag item.image.url(:medium) %>
              <div class="caption">
                <h3><%= item.title %></h3>
                <p><%= item.description %></p>
                <p style="position:absolute;bottom:10px;left:10px;margin:0;padding:5px 3px;"> Price:$<%= item.price %></p>
                <p><a href="#" class="btn btn-default" role="button" style="position:absolute;bottom:10px;right:10px;margin:0;padding:5px 3px;">Add to Cart</a></p>
              </div>
            </div>
          <% end %>
        <%end%>
    </div>
  <%end%>
</div>
