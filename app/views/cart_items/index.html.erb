<div id="item-edit-form">
  <% @cart.each do |item| %>
    <h1><%= item.title %></h1>Price: $<%= item.price %>
    <h2>Quantity: <%= item.quantity %></h2>
  <% end %>
  Total: $<%= @cart.total_cost %>
  <% if current_user %>
    <%= link_to "Checkout", @cart.order, method: :put %>
  <% else %>
    <%= link_to "Checkout", new_user_path %>
  <% end %>
</div>
