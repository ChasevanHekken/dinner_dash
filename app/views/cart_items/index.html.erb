<div class="col-md-4 col-md-offset-5">
  <% if @cart.total_items == 0 %>
    <span class="notice empty-cart">Your cart is empty</span>
  <% end %>
</div>
<div class="edit-form">
  <table class="table table-hover">
    <thead>
      <th>Item</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Subtotal</th>
    </thead>
    <tbody>
        <% @cart.each do |item| %>
        <tr class="cart_item cart_item_<%= item.id %>">
          <td class="title"><%= item.title %></td>
          <td class="price">$<%= item.price %></td>
          <td class="quantity">
            <%= button_to cart_item_path(id: item), method: :put, class: "btn btn-xs decrease" do %>
              <span class="glyphicon glyphicon-minus" aria-hidden="true"></span>
            <% end %>
            <%= item.quantity %>
            <%= button_to cart_item_path(id: item), method: :put, class: "btn btn-xs increase" do %>
              <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            <% end %>
          </td>
          <td class="subtotal">$<%= @cart.subtotal(item) %></td>
          <td> <%= button_to "Remove", cart_item_path(id: item), method: :delete %> </td>
        </tr>
        <% end %>
    </tbody>
    <tfoot>
      <tr>
        <td></td>
        <td></td>
        <td></td>
        <td>Total: $<%= @cart.total_cost %></td>
      </tr>
    </tfoot>
  </table>

  <div class="checkout-button">
    <% if current_user %>
    <%= link_to "Checkout", edit_order_path(@cart.order), class: 'btn btn-default' %>
    <% else %>
    <span class="notice login-checkout">You must be logged in to place an order.</span>
    <% end %>
  </div>
</div>
