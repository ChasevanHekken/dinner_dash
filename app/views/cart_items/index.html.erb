<div id="item-edit-form">
  <table class="table table-hover">
    <th>Item</th>
    <th>Price</th>
    <th>Quantity</th>

    <% @cart.each do |item| %>
    <tr>
      <td><%= item.title %></td>
      <td>$<%= item.price %></td>
      <td><%= item.quantity %></td>
    </tr>
    <% end %>
  </table>
  <h2>Total: $<%= @cart.total_cost %></h2>
  <div class="checkout-button">
    <% if current_user %>
    <%= link_to "Checkout", @cart.order, method: :put, class: 'btn btn-default' %>
    <% else %>
    <%= link_to "Checkout", new_user_path, class: 'btn btn-default' %>
    <% end %>
  </div>
</div>
