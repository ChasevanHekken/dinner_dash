<div id="item-edit-form">
  <table class="table table-hover">
    <thead>
      <th>Item</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Subtotal</th>
    </thead>
    <tbody>
      <% @cart.each do |item| %>
      <tr class="cart_item cart_item_<%= item.id %>">
        <td class="title"><%= item.title %></td>
        <td class="price">$<%= item.price %></td>
        <td class="quantity"><%= item.quantity %></td>
        <td class="subtotal">$<%= @cart.subtotal(item) %></td>
      </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <td></td>
        <td></td>
        <td></td>
        <td>Total: $<%= @cart.total_cost %></td>
      </tr>
    </tfoot>
  </table>

  <div class="checkout-button">
    <% if current_user %>
    <%= link_to "Checkout", @cart.order, method: :put, class: 'btn btn-default' %>
    <% else %>
    <%= link_to "Checkout", new_user_path, class: 'btn btn-default' %>
    <% end %>
  </div>
</div>
