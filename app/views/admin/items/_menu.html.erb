<div id="container">
  <% @categories.each do |category| %>
    <div class="category-block row">
      <div class= "category-title">
        <h2 class="menu-category"><span class="anchor" id="category-id-<%= category.id %>"></span><%= category.name %></h2>
      </div>
        <% category.items.each do |item| %>
          <div class="thumbnail col-sm-6 col-md-4" style="height:350px; width:250px; margin: 10px">
            <%= image_tag item.image.url(:thumb) %>
            <div class="caption">
              <h3><%= item.title %></h3>
              <p><%= item.description %></p>
              <p><%= item.price %></p>
              <p><a href="#" class="btn btn-default" role="button" style="position:absolute;bottom:10px;right:10px;margin:0;padding:5px 3px;">Retire</a></p>
              <p><a href="items/<%= item.id %>/edit" class="btn btn-default" role="button" style="position:absolute;bottom:10px;left:10px;margin:0;padding:5px 3px;">Modify</a></p>
            </div>
          </div>
        <%end%>
    </div>
  <%end%>
</div>
